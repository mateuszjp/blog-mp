<p id="notice"><%= notice %></p>

<div class="post">
    <p>
      <strong>Title:</strong>
      <%= @post.title %>
    </p>

    <p>
      <strong>Content:</strong>
      <%= @post.content %>
    </p>

    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
    <span style="float:right"><%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %></span>
</div>

<p>Komentarze (<%= @comments.count %>)</p>
<!--<div class="comments">-->
  <div style="margin: 10px; background-color: aquamarine">
      <% @comments.each do |c| %>
          <div class="comment">
            <h3><%= c.name %></h3>
            <p><%= c.content %></p>
          </div>
        <% end %>
      <div class="comment_form"><%= render 'comments/form' %></div>
  </div>
